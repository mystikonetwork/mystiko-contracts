{
  "name": "@mystikonetwork/contracts-roller",
  "version": "0.2.3",
  "description": "Roller smart contracts of Mystiko.Network",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "/contracts/**/*.sol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mystikonetwork/mystiko-contracts",
    "directory": "packages/contracts-roller"
  },
  "author": "Mystiko Network",
  "license": "MIT",
  "scripts": {
    "prettier:check": "prettier --check \"./**/*.{ts,sol}\" --config .prettierrc",
    "prettier:fix": "prettier --write \"./**/*.{ts,sol}\" --config .prettierrc",
    "prettier": "yarn prettier:fix",
    "lint": "solhint contracts/**/*.sol",
    "report-gas:summary": "REPORT_GAS=true hardhat test",
    "size-contracts": "hardhat size-contracts | sed -r 's/[[:cntrl:]]\\\\\\\\\\\\\\\\[[0-9]{1,3}m//g' > reports/size/contract_sizes.txt",
    "clean": "hardhat clean && rm -rf artifacts && rm -rf artifactsExternal",
    "build": "yarn build:contract && yarn build:abi",
    "build:abi": "cd ../.. && lerna run generate --scope @mystikonetwork/contracts-abi-roller",
    "build:contract": "hardhat compile",
    "test": "yarn test:forge",
    "test:forge": "forge test -vvv --lib-paths=../../node_modules --lib-paths=../../foundry"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.7",
    "@babel/register": "^7.16.8",
    "@ethersproject/units": "^5.5.3",
    "@ethersproject/wallet": "^5.5.3",
    "@mystikonetwork/config": "^0.1.16",
    "@mystikonetwork/contracts-abi": "^0.2.3",
    "@mystikonetwork/ecies": "^0.3.0",
    "@mystikonetwork/merkle": "^0.3.0",
    "@mystikonetwork/protocol": "^0.3.0",
    "@mystikonetwork/utils": "^0.1.1",
    "@mystikonetwork/zkp": "^0.3.0",
    "@mystikonetwork/zkp-node": "^0.3.0",
    "@mystikonetwork/governance": "0.1.5",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "5.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "bn.js": "^5.2.0",
    "chai": "^4.3.6",
    "circomlibjs": "^0.0.8",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "fs-extra": "^10.0.1",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.22.4",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-dependency-compiler": "^1.1.4",
    "hardhat-deploy": "^0.12.4",
    "hardhat-gas-reporter": "^2.1.1",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solc": "0.8.20",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "0.8.0-rc.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  }
}
