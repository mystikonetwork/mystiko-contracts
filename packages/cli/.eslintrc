{
  "extends": [
    "oclif",
    "oclif-typescript",
    "prettier"
  ],
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "indent": ["error", 2],
    "prettier/prettier": ["error", { "printWidth": 110 }],
    "quotes": ["error", "single"],
    "linebreak-style": ["error", "unix"],
    "require-await": "error",
    "object-curly-spacing": ["error", "always"]
  }
}
